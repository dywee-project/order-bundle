{# Dywee\OrderBundle\Resources\View\Order\add.html.twig #}

{%  extends "DyweeOrderBundle::admin.html.twig" %}

{% block title %}
    Création d'une commande {{ parent() }}
{% endblock %}

{% block stylesheets %}
    <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <h1>Création d'une commande</h1>

    {% if form.vars.value.sellType == 1 %}
        {%  include "DyweeOrderBundle:Order:form.html.twig" %}
    {% elseif form.vars.value.sellType == 2 %}
        {%  include "DyweeOrderBundle:Order:formRent.html.twig" %}
    {% else %}
        Erreur: aucun type de vente défini
    {% endif %}
{% endblock %}

{% block footerJavascript %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
{% endblock %}