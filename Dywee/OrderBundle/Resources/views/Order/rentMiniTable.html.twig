{# Dywee\OrderBundle\Resources\View\Order\rentMiniTable.html.twig #}

    {% if orderList|length() > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Début</th>
                    <th>Fin</th>
                    <th>User</th>
                    <th>Statut</th>
                </tr>
                </thead>
                <tbody>
                {% for order in orderList %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>NC</td>
                        <td>NC</td>
                        <td>NC</td>
                        <td>NC</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    {% else %}
        <p>Aucune commande n'a été enregistrée.</p>
    {% endif %}