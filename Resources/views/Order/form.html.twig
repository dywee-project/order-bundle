{# Dywee\OrderBundle\Resources\View\Order\form.html.twig #}

{% form_theme form 'DyweeOrderBundle:Form:collection_widget.html.twig' %}

{{ form_start(form) }}
{{ form_errors(form) }}

<button type="submit" id="base_order_save" class="btn-success pull-right btn" style="margin-top: -50px"><i
            class="fa fa-save"></i> Sauvegarder
</button>


<div class="row">
    <div class="col-xs-12 col-md-3">
        <div class="box box-default" style="min-height: 220px">
            <div class="box-header text-center with-border">
                <h2 class="box-title">Description</h2>
            </div>
            <div class="box-body">
                {{ form_widget(form.description) }}
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-6">
        <div class="box box-info text-center with-border" style="min-height: 220px">
            <div class="box-header with-border">
                <h2 class="box-title">Client</h2>
            </div>
            <div class="box-body">
                {{ form_row(form.billingAddress) }}
                {{ form_row(form.shippingAddress) }}
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="box box-primary" style="min-height: 220px">
            <div class="box-header text-center with-border">
                <h2 class="box-title">Statut</h2>
            </div>
            <div class="box-body">
                {{ form_row(form.state) }}
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="box box-success">
            <div class="box-header text-center with-border">
                <h2 class="box-title">Contenu</h2>
            </div>
            <div id="orderElement-wrapper">
                {{ form_widget(form.orderElements) }}
            </div>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-md-6">
        <div class="box box-info">
            <div class="box-header text-center with-border">
                <h2 class="box-title">Livraison</h2>
            </div>
            <div class="box-body">
                {{ form_row(form.shippingMethod) }}
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header text-center with-border">
                <h2 class="box-title">Paiement</h2>
            </div>
            <div class="box-body">
                <p>En développement</p>
            </div>
        </div>
    </div>

</div>

<div class="row">

    <div class="col-md-6">
        <div class="box box-default">
            <div class="box-header text-center with-border">
                <h2 class="box-title">Location</h2>
            </div>
            <div class="box-body">
                {{ form_row(form.beginAt) }}

                {{ form_row(form.endAt) }}
            </div>
        </div>
    </div>


    <div class="col-md-6">
        <div class="box box-default">
            <div class="box-header text-center with-border">
                <h2 class="box-title">Réduction</h2>
            </div>
            <div class="box-body">
                <p>En développement</p>
            </div>
        </div>
    </div>
</div>

<div class="hide">
    {{ form_widget(form.orderRentElements) }}
</div>

{{ form_rest(form) }}

{{ form_end(form) }}